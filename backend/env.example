# Movie Shorts - Environment Variables
# =====================================
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED FOR FULL FUNCTIONALITY
# =============================================================================

# Google API Key (for Gemini LLM features)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_api_key_here

# =============================================================================
# OPTIONAL - Override defaults
# =============================================================================

# Whisper model size: tiny, base, small, medium, large
# - tiny: Fast but lower quality (recommended for Render Free tier)
# - small: Good balance (recommended for Render Standard tier)
# - large: Best quality but slow and needs lots of RAM
MOVIE_SHORTS_WHISPER_MODEL_SIZE=small

# Flask configuration
MOVIE_SHORTS_FLASK_PORT=5000
MOVIE_SHORTS_FLASK_DEBUG=false
MOVIE_SHORTS_FLASK_HOST=0.0.0.0

# Research configuration
MOVIE_SHORTS_RESEARCH_LOG_LEVEL=INFO
MOVIE_SHORTS_RESEARCH_EXPERIMENT_NAME=production

# Video limits
MOVIE_SHORTS_VIDEO_MAX_FILE_SIZE_BYTES=5368709120  # 5GB

# =============================================================================
# RENDER-SPECIFIC (set these in Render dashboard)
# =============================================================================
# PORT - Render sets this automatically
# PYTHON_VERSION - Set to 3.11.4 in render.yaml

